# ===========================================
# Docker Services
# ===========================================

# PostgreSQL
POSTGRES_DB=shop_db
POSTGRES_USER=shop_user
POSTGRES_PASSWORD=shop_pass
POSTGRES_PORT=5433

# Redis
REDIS_PORT=6379

# MinIO (S3-compatible storage, local dev only)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ===========================================
# Application
# ===========================================

# Server
PORT=8080
ENV=development

# Database
DATABASE_URL=postgresql://shop_user:shop_pass@localhost:5433/shop_db?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379

# S3 Storage (Timeweb Cloud)
S3_ENDPOINT=https://s3.twcstorage.ru
S3_REGION=ru-1
S3_BUCKET=your-bucket-id
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_PUBLIC_URL=https://s3.twcstorage.ru/your-bucket-id

# JWT
JWT_SECRET=change-me-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
